  <script>
    // Seleccionar elementos del modal de imagen
    const thumbnail = document.getElementById("thumbnail");
    const modal = document.getElementById("modal");
    const closeButton = document.getElementById("closeModal");

    // Seleccionar elementos del modal de proceso detallado
    const openDetailedProcessBtn = document.getElementById("openDetailedProcess");
    const detailedModal = document.getElementById("detailedProcessModal");
    const closeDetailedBtn = document.getElementById("closeDetailedModal");
    const closeDetailedBottomBtn = document.getElementById("closeDetailedModalBottom");

    // Manejar modal de imagen
    thumbnail?.addEventListener("click", () =>
      modal?.classList.remove("hidden")
    );
    closeButton?.addEventListener("click", () =>
      modal?.classList.add("hidden")
    );

    // Cerrar modal de imagen al hacer click fuera
    modal?.addEventListener("click", (e) => {
      if (e.target === modal) modal.classList.add("hidden");
    });

    // Manejar modal de proceso detallado
    openDetailedProcessBtn?.addEventListener("click", () => {
      detailedModal?.classList.remove("hidden");
      // Agregar animaci√≥n suave
      setTimeout(() => {
        detailedModal?.querySelector('div')?.classList.add('animate-fade-in-up');
      }, 10);
    });

    closeDetailedBtn?.addEventListener("click", () =>
      detailedModal?.classList.add("hidden")
    );

    closeDetailedBottomBtn?.addEventListener("click", () => {
      detailedModal?.classList.add("hidden");
      // Scroll suave al formulario
      document.getElementById("formulario")?.scrollIntoView({ behavior: 'smooth' });
    });

    // Cerrar modal detallado al hacer click fuera
    detailedModal?.addEventListener("click", (e) => {
      if (e.target === detailedModal) detailedModal.classList.add("hidden");
    });

    // Cerrar modales con ESC
    document.addEventListener("keydown", (e) => {
      if (e.key === "Escape") {
        modal?.classList.add("hidden");
        detailedModal?.classList.add("hidden");
      }
    });
  </script>
