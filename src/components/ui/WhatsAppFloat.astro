---
// Componente de botón flotante de WhatsApp profesional para MetroMedics
const {
  phoneNumber = "573001234567",
  message = "Hola, necesito información sobre calibración/mantenimiento de equipos médicos. ¿Pueden ayudarme?",
  contextualMessage = null
} = Astro.props;

// Mensajes contextuales según la página
const pathname = Astro.url.pathname;
let finalMessage = message;

if (contextualMessage) {
  finalMessage = contextualMessage;
} else if (pathname.includes('/servicios')) {
  finalMessage = "Consulta sobre servicios de calibración y mantenimiento de equipos médicos";
} else if (pathname.includes('/laboratorios')) {
  finalMessage = "Información sobre servicios de laboratorio acreditado";
} else if (pathname.includes('/mantenimiento')) {
  finalMessage = "Consulta sobre mantenimiento preventivo y correctivo de equipos";
} else if (pathname.includes('/contacto')) {
  finalMessage = "Solicitud de cotización para equipos médicos";
}

const whatsappUrl = `https://wa.me/${phoneNumber}?text=${encodeURIComponent(finalMessage)}`;
---

<!-- Botón flotante de WhatsApp -->
<div
  id="whatsapp-float"
  class="fixed bottom-6 right-6 z-50 group"
>
  <a
    href={whatsappUrl}
    target="_blank"
    rel="noopener noreferrer"
    class="flex items-center justify-center w-16 h-16 bg-green-600 hover:bg-green-700 text-white rounded-full shadow-lg hover:shadow-xl transform hover:scale-102 transition-all duration-200 focus:outline-none focus:ring-4 focus:ring-green-300 focus:ring-offset-2"
    role="button"
    aria-label="Consulta técnica especializada por WhatsApp - MetroMedics"
    title="Consulta técnica especializada • Respuesta inmediata"
  >
    <!-- Icono de WhatsApp -->
    <svg
      class="w-8 h-8"
      fill="currentColor"
      viewBox="0 0 24 24"
      aria-hidden="true"
    >
      <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893A11.821 11.821 0 0020.886 3.75"/>
    </svg>
  </a>

  <!-- Tooltip/Mensaje emergente profesional -->
  <div
    class="absolute bottom-20 right-0 mb-2 opacity-0 group-hover:opacity-100 transition-opacity duration-300 pointer-events-none"
  >
    <div class="bg-gray-900 text-white text-sm px-4 py-3 rounded-lg shadow-xl whitespace-nowrap relative border border-gray-700">
      <div class="font-semibold text-green-400">Consulta técnica especializada</div>
      <div class="text-gray-300 text-xs mt-1">Respuesta inmediata • Lun-Vie 8AM-6PM</div>
      <!-- Flecha del tooltip -->
      <div class="absolute top-full right-6 w-0 h-0 border-l-4 border-r-4 border-t-4 border-transparent border-t-gray-900"></div>
    </div>
  </div>

</div>

<!-- Estilos adicionales -->
<style>
  #whatsapp-float {
    /* Animación suave de entrada */
    animation: slideInUp 0.5s ease-out;
  }

  @keyframes slideInUp {
    from {
      transform: translateY(100px);
      opacity: 0;
    }
    to {
      transform: translateY(0);
      opacity: 1;
    }
  }

  /* Pulso profesional más sutil cada 10 segundos */
  #whatsapp-float a {
    animation: professionalPulse 10s infinite;
  }

  @keyframes professionalPulse {
    0%, 95%, 100% {
      transform: scale(1);
    }
    97.5% {
      transform: scale(1.02);
    }
  }

  /* Responsive - Ajustar tamaño en móviles */
  @media (max-width: 640px) {
    #whatsapp-float {
      bottom: 1.5rem;
      right: 1.5rem;
    }

    #whatsapp-float a {
      width: 3.5rem;
      height: 3.5rem;
    }

    #whatsapp-float svg {
      width: 1.75rem;
      height: 1.75rem;
    }
  }

  /* Ocultar temporalmente en pantallas muy pequeñas donde puede interferir con la navegación */
  @media (max-width: 360px) {
    #whatsapp-float {
      display: none;
    }
  }
</style>

<script>
  // Funcionalidad del botón de WhatsApp simplificada
  document.addEventListener('DOMContentLoaded', () => {
    const whatsappButton = document.getElementById('whatsapp-float');
    if (!whatsappButton) return;

    // Mostrar el botón inicialmente con opacidad completa
    whatsappButton.style.opacity = '1';

    // Tracking de clics
    whatsappButton.addEventListener('click', (e) => {
      console.log('WhatsApp consultation requested - MetroMedics');

      // Analytics si está disponible
      if (typeof gtag !== 'undefined') {
        gtag('event', 'whatsapp_consultation', {
          event_category: 'Lead Generation',
          event_label: 'WhatsApp Technical Consultation'
        });
      }
    });
  });
</script>