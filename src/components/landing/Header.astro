<script>
  // Función para manejar dropdowns con mejor accesibilidad
  function setupDropdown(linkId, menuId, mobileMenuId = null) {
    const link = document.getElementById(linkId);
    const menu = document.getElementById(menuId);
    const mobileMenu = mobileMenuId ? document.getElementById(mobileMenuId) : null;

    if (!link || !menu) return;

    // Toggle dropdown desktop
    link.addEventListener("click", (e) => {
      e.preventDefault();
      const isExpanded = link.getAttribute("aria-expanded") === "true";

      // Cerrar otros dropdowns
      document.querySelectorAll('[aria-expanded="true"]').forEach(el => {
        if (el !== link) {
          el.setAttribute("aria-expanded", "false");
          const otherId = el.getAttribute("aria-controls");
          const otherMenu = document.getElementById(otherId);
          otherMenu?.classList.add("hidden");
        }
      });

      // Toggle current dropdown
      link.setAttribute("aria-expanded", !isExpanded ? "true" : "false");
      menu.classList.toggle("hidden");

      // Rotar icono
      const icon = link.querySelector("svg:last-child");
      if (icon) {
        icon.style.transform = !isExpanded ? "rotate(180deg)" : "rotate(0deg)";
      }
    });

    // Navegación por teclado
    link.addEventListener("keydown", (e) => {
      if (e.key === "Enter" || e.key === " ") {
        e.preventDefault();
        link.click();
      } else if (e.key === "Escape") {
        link.setAttribute("aria-expanded", "false");
        menu.classList.add("hidden");
        link.focus();
      } else if (e.key === "ArrowDown") {
        e.preventDefault();
        if (link.getAttribute("aria-expanded") === "true") {
          const firstItem = menu.querySelector('a[role="menuitem"]');
          firstItem?.focus();
        } else {
          link.click();
        }
      }
    });

    // Navegación en el menú
    menu.addEventListener("keydown", (e) => {
      const items = menu.querySelectorAll('a[role="menuitem"]');
      const currentIndex = Array.from(items).indexOf(document.activeElement);

      if (e.key === "ArrowDown") {
        e.preventDefault();
        const nextIndex = (currentIndex + 1) % items.length;
        items[nextIndex]?.focus();
      } else if (e.key === "ArrowUp") {
        e.preventDefault();
        const prevIndex = (currentIndex - 1 + items.length) % items.length;
        items[prevIndex]?.focus();
      } else if (e.key === "Escape") {
        e.preventDefault();
        link.setAttribute("aria-expanded", "false");
        menu.classList.add("hidden");
        link.focus();
      }
    });

    // Toggle dropdown móvil
    if (mobileMenu) {
      const mobileLink = document.getElementById(linkId.replace("Link", "MobileLink"));
      mobileLink?.addEventListener("click", () => {
        const isExpanded = mobileLink.getAttribute("aria-expanded") === "true";
        mobileLink.setAttribute("aria-expanded", !isExpanded ? "true" : "false");
        mobileMenu.classList.toggle("hidden");

        // Rotar icono móvil
        const icon = mobileLink.querySelector("svg:last-child");
        if (icon) {
          icon.style.transform = !isExpanded ? "rotate(180deg)" : "rotate(0deg)";
        }
      });
    }

    // Cerrar al hacer click fuera
    document.addEventListener("click", (e) => {
      if (!link.contains(e.target) && !menu.contains(e.target)) {
        link.setAttribute("aria-expanded", "false");
        menu.classList.add("hidden");
        const icon = link.querySelector("svg:last-child");
        if (icon) icon.style.transform = "rotate(0deg)";
      }
    });
  }

  // Configurar dropdowns
  setupDropdown("laboratoriosLink", "laboratorios", "laboratoriosMobile");
  setupDropdown("clientesLink", "clientes", "clientesMobile");

  // Manejo del menú móvil
  const navToggle = document.getElementById("nav-toggle");
  const burgerMenu = document.getElementById("burgerMenu");

  navToggle?.addEventListener("click", () => {
    const isExpanded = navToggle.getAttribute("aria-expanded") === "true";
    navToggle.setAttribute("aria-expanded", !isExpanded ? "true" : "false");
    burgerMenu?.classList.toggle("hidden");
  });

  // Cerrar menú móvil con Escape
  document.addEventListener("keydown", (e) => {
    if (e.key === "Escape") {
      // Cerrar menú móvil
      if (!burgerMenu?.classList.contains("hidden")) {
        navToggle?.setAttribute("aria-expanded", "false");
        burgerMenu?.classList.add("hidden");
        navToggle?.focus();
      }

      // Cerrar dropdowns
      document.querySelectorAll('[aria-expanded="true"]').forEach(el => {
        if (el !== navToggle) {
          el.setAttribute("aria-expanded", "false");
          const menuId = el.getAttribute("aria-controls");
          const menu = document.getElementById(menuId);
          menu?.classList.add("hidden");
        }
      });
    }
  });

  // Manejo mejorado del scroll con mejor rendimiento
  const header = document.getElementById("header");
  let ticking = false;

  function updateHeaderStyles() {
    const scrollPos = window.scrollY;

    if (scrollPos > 10) {
      header?.classList.add("shadow-lg");
    } else {
      header?.classList.remove("shadow-lg");
    }

    ticking = false;
  }

  function requestTick() {
    if (!ticking) {
      requestAnimationFrame(updateHeaderStyles);
      ticking = true;
    }
  }

  // Optimizar scroll listener
  document.addEventListener("scroll", requestTick, { passive: true });

  // Mejorar foco visible
  document.addEventListener("DOMContentLoaded", () => {
    // Agregar clase para foco visible solo con teclado
    document.addEventListener("mousedown", () => {
      document.body.classList.add("using-mouse");
    });

    document.addEventListener("keydown", (e) => {
      if (e.key === "Tab") {
        document.body.classList.remove("using-mouse");
      }
    });
  });
</script>

